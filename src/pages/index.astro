---
import Layout from '../layouts/Layout.astro';
import logo from '../assets/logo.png';
---

<Layout title="Rezzkie Resources">
    <!-- Hero Section with background image placeholder -->
    <section class="relative text-white overflow-hidden">
        <div class="absolute inset-0 bg-cover bg-center blur-[6px] scale-110" style="background-image: url('/landing_background.jpeg');"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-blue-950/85 via-blue-900/75 to-blue-800/80"></div>
        
        <!-- Animated background elements -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl animate-bounce-gentle"></div>
            <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-bounce-gentle" style="animation-delay: 1s;"></div>
        </div>
        
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center animate-fade-in">
                <h1 class="text-5xl md:text-7xl font-bold mb-8 animate-slide-up">
                    Welcome to <span class="text-gradient">Rezzkie Resources</span>
                </h1>
                <p class="text-xl md:text-2xl mb-10 text-blue-100 max-w-4xl mx-auto leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
                    Your trusted partner for technology solutions and TMpoint Authorised Dealer for Unifi
                </p>
                <div class="flex flex-col sm:flex-row gap-6 justify-center animate-slide-up" style="animation-delay: 0.4s;">
                    <a href="/services" class="bg-white text-blue-600 px-10 py-4 rounded-xl font-semibold hover:bg-blue-50 hover:shadow-xl hover:scale-105 transition-all duration-300 shadow-lg">
                        Our Services
                    </a>
                    <a href="/contact" class="border-2 border-white text-white px-10 py-4 rounded-xl font-semibold hover:bg-white hover:text-blue-600 hover:shadow-xl hover:scale-105 transition-all duration-300 backdrop-blur-sm">
                        Get In Touch
                    </a>
                </div>
                <div class="mt-12 flex items-center justify-center gap-8 opacity-90 animate-slide-up" style="animation-delay: 0.6s;">
                    <div class="hover:scale-110 transition-transform duration-300">
                        <img src="/tm_logo.png" alt="TMpoint" class="h-12 w-auto" loading="lazy" />
                    </div>
                    <div class="hover:scale-110 transition-transform duration-300">
                        <img src="/unifi_logo.png" alt="unifi Malaysia" class="h-10 w-auto" loading="lazy" />
                    </div>
                </div>
            </div>

			<!-- Enhanced TMpoint badge -->
			<div class="absolute bottom-8 right-8 animate-scale-in" style="animation-delay: 0.8s;">
				<div class="inline-flex items-center bg-white/95 backdrop-blur-md border-2 border-blue-600 rounded-xl px-4 py-2 shadow-2xl hover:shadow-blue-500/25 hover:scale-105 transition-all duration-300">
					<div class="w-8 h-8 bg-gradient-to-br rounded-full flex items-center justify-center mr-3">
						<img src="/tm_logo.png" alt="TM" class="h-5 w-auto" loading="lazy" />
					</div>
					<div class="text-left leading-tight flex flex-col justify-center">
						<p class="m-0 leading-tight text-sm font-bold text-gray-900">TMpoint Permyjaya</p>
						<p class="m-0 leading-tight text-xs font-medium text-blue-700">Authorised Dealer</p>
					</div>
				</div>
			</div>
        </div>
