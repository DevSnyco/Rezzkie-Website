							</span>
						</div>
					</div>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle + highlight current page in navbar
			(function () {
				const mobileMenuButton = document.querySelector('.mobile-menu-button');
				const mobileMenu = document.querySelector('.mobile-menu');

				if (mobileMenuButton && mobileMenu) {
					mobileMenuButton.addEventListener('click', () => {
						mobileMenu.classList.toggle('hidden');
					});
				}

				// Set active link by comparing pathnames. Adds visual emphasis to the current page link.
				function setActiveNav() {
					const currentPath = location.pathname.replace(/\/$/, '') || '/';
					const links = document.querySelectorAll('nav a, .mobile-menu a');

					links.forEach((a) => {
						let href = a.getAttribute('href') || '';
						// Normalize href (handle absolute URLs)
						try {
							href = new URL(href, location.origin).pathname;
						} catch (e) {
							// leave href as-is if new URL fails
						}
						href = href.replace(/\/$/, '') || '/';

						if (href === currentPath) {
							// active styling — adjust classes to taste
							a.classList.remove('text-gray-500', 'hover:text-blue-600');
							a.classList.add('text-black-700', 'font-semibold');
							a.setAttribute('aria-current', 'page');
						} else {
							a.classList.remove('text-black-700', 'font-semibold');
							a.classList.add('text-gray-500');
							a.removeAttribute('aria-current');
						}
					});
				}

				// Run on load
				setActiveNav();

				// If site uses client-side navigation (pushState), update active on popstate
				window.addEventListener('popstate', setActiveNav);
			})();
		</script>
